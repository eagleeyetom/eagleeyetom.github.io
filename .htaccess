
# force ssl
RewriteEngine On
RewriteCond %{HTTPS} !=on
RewriteRule ^ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

# Remove index.html from URLs (canonical enforcement)
RewriteCond %{THE_REQUEST} ^GET\ .*/index\.html\ HTTP
RewriteRule ^(.*)index\.html$ /$1 [R=301,L]

# Language redirect for root index.html
RewriteCond %{REQUEST_URI} ^/index\.html$ [OR]
RewriteCond %{REQUEST_URI} ^/$
RewriteCond %{HTTP:Accept-Language} ^en [NC]
RewriteRule ^(index\.html)?$ /en/ [R=302,L]

RewriteCond %{REQUEST_URI} ^/index\.html$ [OR]
RewriteCond %{REQUEST_URI} ^/$
RewriteRule ^(index\.html)?$ /pl/ [R=302,L]